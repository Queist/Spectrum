<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.game.queist.spectrum">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:requestLegacyExternalStorage="true"
        android:hardwareAccelerated="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:colorMode="wideColorGamut"
        android:isGame="true"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar"
        android:windowLayoutInDisplayCutoutMode = "shortEdges"
        tools:targetApi="o_mr1">
        <activity android:name=".activities.Logo"
            android:screenOrientation="sensorLandscape"
            tools:ignore="LockedOrientationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.StartScreen"
            android:screenOrientation="sensorLandscape"/>
        <activity android:name=".activities.SongSelect"
            android:screenOrientation="sensorLandscape"/>
        <activity android:name=".activities.PlayScreen"
            android:screenOrientation="sensorLandscape"/>
        <activity android:name=".activities.Result"
            android:screenOrientation="sensorLandscape"/>
        <activity android:name=".activities.SyncTest"
            android:screenOrientation="sensorLandscape"/>
        <activity android:name=".activities.SpectrumAlign"
            android:screenOrientation="sensorLandscape"/>
        <activity android:name=".activities.Volume"
            android:screenOrientation="sensorLandscape"/>
        <activity android:name=".activities.LoadingScreen"
            android:screenOrientation="sensorLandscape" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

    <!-- Tell the system this app requires OpenGL ES 3.0. -->
    <uses-feature android:glEsVersion="0x00030000" android:required="true" />

</manifest>